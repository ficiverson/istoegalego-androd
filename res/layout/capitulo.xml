<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondoief" >

    <RelativeLayout
        android:id="@id/layoutsup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondoppal" >

        <TextView
            android:id="@id/titulocap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Isto é Galego"
            android:textSize="26.25sp" />

        <TextView
            android:id="@id/subtitulocap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/titulocap"
            android:layout_below="@id/titulocap"
            android:text="POR CUACFM"
            android:textSize="7.5sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/layoutmedio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutsup"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/textitem2r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Capítulo completo"
            android:textSize="15.0sp" />

        <TextView
            android:id="@id/ahora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textitem2r"
            android:layout_centerHorizontal="true"
            android:text="Elixe unha lección"
            android:textSize="11.25sp" />
    </RelativeLayout>

    <GridView
        android:id="@id/gridview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutmedio"
        android:layout_marginTop="7.5dip"
        android:listSelector="#00000000"
        android:numColumns="1"
        android:verticalSpacing="3.75dip" />

</RelativeLayout>